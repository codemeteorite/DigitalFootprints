<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Post</title>

    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen p-6 flex flex-col items-center">

    <h1 class="text-3xl font-bold mb-6">Edit Your Post</h1>

    <!-- EDIT FORM -->
    <form 
        method="POST" 
        action="/posts/edit/<%= ogpost.id %>?_method=PATCH"
        class="w-full max-w-xl bg-white p-6 rounded-xl shadow space-y-4"
    >
        <label class="font-semibold text-lg">Edit Content:</label>

        <textarea
            name="updatedContent"
            class="w-full p-4 border rounded-xl h-40 focus:ring focus:ring-indigo-300"
            required
        ><%= ogpost.content %></textarea>

        <button 
            type="submit"
            class="w-full bg-indigo-600 text-white py-3 rounded-xl hover:bg-indigo-700 transition"
        >
            Save Changes
        </button>
    </form>


    <!-- DELETE BUTTON BELOW FORM -->
    <button
        id="openDeleteModal"
        class="mt-6 text-red-600 font-semibold hover:underline"
    >
        Delete This Post
    </button>


    <!-- DELETE CONFIRMATION MODAL -->
    <div 
        id="deleteModal" 
        class="fixed inset-0 bg-black/60 flex justify-center items-center hidden"
    >
        <div class="bg-white p-6 rounded-2xl shadow-xl w-full max-w-sm">
            <h2 class="text-xl font-bold text-center mb-4">Are you sure?</h2>

            <p class="text-center mb-6 text-gray-600">
                Do you really want to delete this post? This action cannot be undone.
            </p>

            <div class="flex justify-between">
                <button 
                    id="closeDeleteModal"
                    class="px-4 py-2 rounded-lg bg-gray-300 hover:bg-gray-400 transition"
                >
                    No, Cancel
                </button>

                <form 
                    method="POST" 
                    action="/delete-post/<%= ogpost.post_id %>?_method=DELETE"
                >
                    <button 
                        type="submit"
                        class="px-4 py-2 rounded-lg bg-red-600 text-white hover:bg-red-700 transition"
                    >
                        Yes, Delete
                    </button>
                </form>
            </div>
        </div>
    </div>


    <!-- MODAL SCRIPT -->
    <script>
        const modal = document.getElementById("deleteModal");
        const openBtn = document.getElementById("openDeleteModal");
        const closeBtn = document.getElementById("closeDeleteModal");

        openBtn.addEventListener("click", () => modal.classList.remove("hidden"));
        closeBtn.addEventListener("click", () => modal.classList.add("hidden"));
    </script>

</body>

</html>
