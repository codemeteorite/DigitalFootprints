<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user ? user.username : 'Profile' %> ‚Äî Profile</title>

  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
    }
  </style>

  <script src="https://cdn.tailwindcss.com"></script>

  <script>
    tailwind.config = { darkMode: 'class' };
    if (!localStorage.theme) localStorage.theme = "dark";
    if (localStorage.theme === "dark") {
      document.documentElement.classList.add("dark");
    }
  </script>
</head>

<body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100 min-h-screen p-4">

  <button id="themeToggle"
    class="fixed top-4 right-4 z-50 p-3 rounded-full bg-white dark:bg-gray-800 shadow text-xl hover:scale-110 transition">
    ‚òÄÔ∏è
  </button>

  <div class="max-w-5xl mx-auto space-y-10">

    <div class="bg-gray-200 dark:bg-gray-800 p-6 rounded-2xl shadow-lg flex flex-col lg:flex-row gap-6 relative">

      <% if (user) { %>
        <a href="/edit-profile"
          class="absolute bottom-4 right-4 bg-indigo-600 text-white px-3 py-1 text-sm rounded-lg shadow hover:bg-indigo-700 transition">
          Edit Profile
        </a>
      <% } %>

      <div class="w-full lg:w-1/3 text-center">

        <% if (user && user.profile_photo_url) { %>
          <img src="<%= user.profile_photo_url %>" class="w-full max-h-80 object-contain rounded-xl shadow-md" />
        <% } else { %>
          <div class="w-full h-48 bg-gray-300 dark:bg-gray-700 rounded-xl flex items-center justify-center 
            text-gray-700 dark:text-gray-300">
            No Photo Uploaded
          </div>
        <% } %>

        <% if (!user.profile_photo_url) { %>
          <form action="/add-photo-url" method="POST" class="mt-4 space-y-3">
            <input type="text" name="photo_url" placeholder="Paste image URL..." class="w-full p-3 rounded-xl bg-gray-200 dark:bg-gray-700 outline-none focus:ring-2 
                     focus:ring-indigo-500 transition" required>

            <button class="px-5 py-2 bg-indigo-600 text-white rounded-xl shadow hover:bg-indigo-700 transition 
              font-semibold w-full">
              Save Photo
            </button>
          </form>

          <p>Get your image URL from <a href="https://postimages.org/" target="_blank" class="text-indigo-500 underline">PostImages</a>. [Copy the Direct Link]</p>
        <% } %>

      </div>

      <div class="w-full lg:w-2/3">
        <h3 class="text-2xl font-bold break-words max-w-[260px] sm:max-w-full leading-snug">
          @<%= user ? user.username : '' %>
        </h3>

        <p class="text-gray-700 dark:text-gray-300 mt-1">
          <%= user ? user.email : '' %>
        </p>

        <% if (user && user.dream) { %>
          <p class="mt-3 text-lg">Dream: <span class="font-semibold"><%= user.dream %></span></p>
        <% } else { %>
          <p class="mt-3 text-lg text-gray-400 italic">No dream added yet.</p>
        <% } %>

        <p class="mt-3 opacity-70">
          Joined:
          <% if (user && user.created_at) { %>
            <% if (user.created_at instanceof Date) { %>
              <%= user.created_at.toDateString() %>
            <% } else { %>
              <%= new Date(user.created_at).toDateString() %>
            <% } %>
          <% } %>
        </p>
      </div>

    </div>

    <h3 class="text-2xl font-bold text-pink-400">Your Digital Fossils</h3>

    <div class="space-y-4">

      <% if (!posts || posts.length===0) { %>

        <div class="bg-gray-200 dark:bg-gray-800 p-6 rounded-xl text-center">
          <button
            class="openPostModal px-5 py-3 bg-indigo-600 text-white rounded-xl shadow hover:bg-indigo-700 transition">
            Create Your First Post
          </button>
        </div>

      <% } else { %>

        <% posts.forEach(p=> { %>
          <div class="relative bg-gray-200 dark:bg-gray-800 p-5 pt-10 rounded-xl shadow">

            <div class="absolute top-3 right-3 flex space-x-3">
              <form method="get" action="/posts/edit/<%= p.post_id %>">
                <button type="submit" title="Edit" class="text-xl hover:scale-110 transition">‚úèÔ∏è</button>
              </form>

              

            <p class="text-lg mb-2 pr-12"><%= p.post %></p>
            <p class="text-sm opacity-70 pr-12"><%= new Date(p.post_time).toLocaleString() %></p>

          </div>
        <% }) %>

        <div class="text-center pt-4">
          <button
            class="openPostModal px-5 py-3 bg-indigo-600 text-white rounded-xl shadow hover:bg-indigo-700 transition">
            Add New Post
          </button>
        </div>

      <% } %>
    </div>

    <div class="text-center">
      <a href="/feed"
        class="px-6 py-3 rounded-xl text-lg shadow bg-pink-200 text-pink-800 hover:bg-pink-300 transition font-medium">
        ‚¨Ö Back to Feed
      </a>
    </div>

  </div>

  <div id="dreamModal" class="fixed inset-0 bg-black/60 backdrop-blur flex justify-center items-center hidden z-50 p-4">

    <form method="POST" action="/add-dream"
      class="bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-xl w-full max-w-md space-y-5">

      <h2 class="text-2xl font-bold text-center">Tell us your Dream üåü</h2>

      <textarea name="dream" required class="w-full p-4 rounded-xl bg-gray-200 dark:bg-gray-700"></textarea>

      <button class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 rounded-xl">
        Save Dream
      </button>
    </form>
  </div>

  <div id="postModal" class="fixed inset-0 bg-black/60 backdrop-blur flex justify-center items-center hidden z-50 p-4">

    <form method="POST" action="/add-post"
      class="bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-xl w-full max-w-md space-y-5">

      <h2 class="text-2xl font-bold text-center">The World is hearing you üôÇ</h2>

      <textarea name="content" required class="w-full p-4 rounded-xl bg-gray-200 dark:bg-gray-700"></textarea>

      <button class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 rounded-xl">
        Post
      </button>
    </form>
  </div>

  <script>
    const toggle = document.getElementById("themeToggle");

    function updateIcon() {
      if (!toggle) return;
      toggle.textContent =
        document.documentElement.classList.contains("dark") ? "‚òÄÔ∏è" : "üåô";
    }
    updateIcon();

    if (toggle) {
      toggle.addEventListener("click", () => {
        document.documentElement.classList.toggle("dark");
        localStorage.theme =
          document.documentElement.classList.contains("dark") ? "dark" : "light";
        updateIcon();
      });
    }

    window.onload = () => {
      <% if (!user || !user.dream) { %>
        const dm = document.getElementById("dreamModal");
        if (dm) dm.classList.remove("hidden");
      <% } %>

      document.querySelectorAll(".openPostModal").forEach(btn =>
        btn.addEventListener("click", () => {
          const pm = document.getElementById("postModal");
          if (pm) pm.classList.remove("hidden");
        })
      );
    };
  </script>

</body>
</html>
