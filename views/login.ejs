<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <script src="https://cdn.tailwindcss.com"></script>

    <script>
        tailwind.config = { darkMode: 'class' }

        if (localStorage.theme === 'dark') {
            document.documentElement.classList.add('dark');
        } else if (!('theme' in localStorage)) {
            if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
                document.documentElement.classList.add('dark');
            }
        }
    </script>
    
<style>
  .font-inter {
    font-family: 'Inter', sans-serif;
  }

  .typewriter-heading {
    overflow: hidden;
    white-space: nowrap;
    border-right: 2px solid currentColor;
    width: 0;
    animation: typing 2.6s steps(30, end) forwards,
               blink 0.75s step-end infinite;
    margin: 0 auto;
  }

  /* Width tuned for text-2xl Inter (NO CUT-OFF) */
  @keyframes typing {
    from { width: 0; }
    to   { width: 310px; } /* PERFECT WIDTH FOR 2XL */
  }

  @keyframes blink {
    50% { border-color: transparent; }
  }
</style>

</head>

<body class="bg-gray-100 dark:bg-gray-900 flex items-center justify-center min-h-screen p-6 transition">

    <!-- THEME TOGGLE -->
    <button id="themeToggle"
        class="fixed top-5 right-5 p-3 rounded-full text-2xl bg-white dark:bg-gray-800 text-gray-800 dark:text-white shadow-md hover:scale-110 transition">
        ðŸŒ™
    </button>

    <!-- LOGIN CARD -->
    <div class="bg-white dark:bg-gray-800 p-10 rounded-3xl shadow-lg w-full max-w-md space-y-6 transition">

     <h1 class="typewriter-heading font-inter text-2xl font-semibold text-center 
           text-indigo-500 dark:text-indigo-300">
  Step Into the Footprints
</h1>



        <form method="POST" action="/login" class="space-y-5">

            <div class="relative w-full">
                <input type="email" name="email" required class="peer w-full px-4 py-2 border border-gray-400 dark:border-gray-600
           rounded-xl bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white
           focus:border-indigo-500 dark:focus:border-indigo-400
           focus:ring-2 focus:ring-indigo-400/50
           outline-none transition-all duration-300" />

                <label class="absolute left-4 top-2 text-gray-500 dark:text-gray-400 
           transition-all duration-300 
           peer-focus:-top-4 peer-focus:text-xs peer-focus:text-indigo-500
           peer-valid:-top-4 peer-valid:text-xs peer-valid:text-indigo-500">
                    Email
                </label>
            </div>

            <div></div>

            <div class="relative w-full">
                <input type="password" name="password" required class="peer w-full px-4 py-2 border border-gray-400 dark:border-gray-600 
           rounded-xl bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white
           focus:border-indigo-500 dark:focus:border-indigo-400
           focus:ring-2 focus:ring-indigo-400/50
           outline-none transition-all duration-300" />

                <label class="absolute left-4 top-2 text-gray-500 dark:text-gray-400 
           transition-all duration-300 
           peer-focus:-top-4 peer-focus:text-xs peer-focus:text-indigo-500
           peer-valid:-top-4 peer-valid:text-xs peer-valid:text-indigo-500">
                    Password
                </label>
            </div>


            <button
                class="w-full py-3 bg-indigo-600 text-white rounded-xl text-lg font-medium hover:bg-indigo-700 transition shadow-md hover:shadow-lg">
                Let's Roll
            </button>

        </form>

        <div class="text-center">
            <p class="text-gray-600 dark:text-gray-300">
                New here?
                <a href="/newuser" class="text-indigo-600 dark:text-indigo-400 font-semibold hover:underline">
                    Create Account
                </a>
            </p>
        </div>

    </div>

    <script>
        const toggle = document.getElementById("themeToggle");

        function updateIcon() {
            toggle.textContent =
                document.documentElement.classList.contains("dark") ? "â˜€ï¸" : "ðŸŒ™";
        }

        toggle.addEventListener("click", () => {
            document.documentElement.classList.toggle("dark");
            localStorage.theme = document.documentElement.classList.contains("dark") ? "dark" : "light";
            updateIcon();
        });

        updateIcon();
    </script>

</body>

</html>