<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Post</title>

    <script src="https://cdn.tailwindcss.com"></script>

    <script>
        tailwind.config = { darkMode: 'class' }

        // Default dark mode
        if (!localStorage.theme) {
            localStorage.theme = "dark";
        }

        function applyTheme() {
            if (localStorage.theme === "dark") {
                document.documentElement.classList.add("dark");
            } else {
                document.documentElement.classList.remove("dark");
            }
        }

        applyTheme();

        function toggleTheme() {
            if (document.documentElement.classList.contains("dark")) {
                localStorage.theme = "light";
            } else {
                localStorage.theme = "dark";
            }
            applyTheme();
            updateIcon();
        }

        function updateIcon() {
            const icon = document.getElementById("themeIcon");
            icon.textContent = document.documentElement.classList.contains("dark") ? "ðŸŒ™" : "ðŸŒž";
        }

        window.onload = updateIcon;
    </script>
</head>

<body class="bg-gray-100 dark:bg-gray-900 min-h-screen p-6 flex flex-col items-center text-gray-900 dark:text-white">

    <!-- SUN / MOON TOGGLE -->
    <button onclick="toggleTheme()" 
        class="absolute top-4 right-4 px-4 py-2 rounded-lg bg-gray-300 dark:bg-gray-700 hover:bg-gray-400 dark:hover:bg-gray-600 transition text-xl">
        <span id="themeIcon">ðŸŒ™</span>
    </button>

    <h1 class="text-3xl font-bold mb-6">Edit Your Post</h1>

    <!-- EDIT FORM -->
    <form 
        method="POST" 
        action="/posts/edit/<%= ogpost.id %>?_method=PATCH"
        class="w-full max-w-xl bg-white dark:bg-gray-800 p-6 rounded-xl shadow space-y-4"
    >
        <label class="font-semibold text-lg">Edit Content:</label>

        <textarea
            name="updatedContent"
            class="w-full p-4 border rounded-xl h-40 focus:ring focus:ring-indigo-300 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
            required
        ><%= ogpost.content %></textarea>

        <button 
            type="submit"
            class="w-full bg-indigo-600 text-white py-3 rounded-xl hover:bg-indigo-700 transition"
        >
            Save Changes
        </button>
    </form>

    <!-- DELETE BUTTON -->
    <button
        id="openDeleteModal"
        class="mt-6 text-red-600 font-semibold hover:underline"
    >
        Delete This Post
    </button>

    <!-- DELETE MODAL -->
    <div 
        id="deleteModal" 
        class="fixed inset-0 bg-black/60 flex justify-center items-center hidden"
    >
        <div class="bg-white dark:bg-gray-800 p-6 rounded-2xl shadow-xl w-full max-w-sm">
            <h2 class="text-xl font-bold text-center mb-4">Are you sure?</h2>

            <p class="text-center mb-6 text-gray-600 dark:text-gray-300">
                Do you really want to delete this post? This action cannot be undone.
            </p>

            <div class="flex justify-between">
                <button 
                    id="closeDeleteModal"
                    class="px-4 py-2 rounded-lg bg-gray-300 hover:bg-gray-400 dark:bg-gray-700 dark:hover:bg-gray-600 transition"
                >
                    No, Cancel
                </button>

                <form 
                    method="POST" 
                    action="/delete-post/<%= ogpost.post_id %>?_method=DELETE"
                >
                    <button 
                        type="submit"
                        class="px-4 py-2 rounded-lg bg-red-600 text-white hover:bg-red-700 transition"
                    >
                        Yes, Delete
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- MODAL SCRIPT -->
    <script>
        const modal = document.getElementById("deleteModal");
        const openBtn = document.getElementById("openDeleteModal");
        const closeBtn = document.getElementById("closeDeleteModal");

        openBtn.addEventListener("click", () => modal.classList.remove("hidden"));
        closeBtn.addEventListener("click", () => modal.classList.add("hidden"));
    </script>

</body>
</html>
